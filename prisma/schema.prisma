generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        String @id @default(uuid())
  email     String @unique
  password  String
  name      String
  login     String
  avatarUrl String
  courseName String

  posts Post[]
}

model Post {
  id     String @id @default(uuid())
  userId String

  postUrl   String
  content   String
  isPublic  Boolean  @default(false)
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}
